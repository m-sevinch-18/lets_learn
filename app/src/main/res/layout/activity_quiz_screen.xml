<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizScreen"
    android:background="@drawable/background">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quizback"
        android:layout_width="55dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:icon="@drawable/back"
        app:iconGravity="textEnd"
        app:iconSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Fruitsquiz"
        android:layout_width="317dp"
        android:layout_height="63dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:text="Fruits quiz"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/musicplay"
        android:layout_width="58dp"
        android:layout_height="70dp"
        android:layout_marginStart="336dp"
        android:layout_marginTop="16dp"
        app:cornerRadius="50dp"
        app:icon="@drawable/voice"
        app:iconGravity="textStart"
        app:iconSize="40sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/volumeoff"
        android:layout_width="58dp"
        android:layout_height="70dp"
        android:layout_marginStart="336dp"
        android:layout_marginTop="16dp"
        app:cornerRadius="50dp"
        app:icon="@drawable/volumeoff"
        app:iconGravity="textStart"
        app:iconSize="40sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Animalsquiz"
        android:layout_width="317dp"
        android:layout_height="63dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:text="Animals quiz"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fruitsquiz" />

    <Button
        android:id="@+id/numbersquiz"
        android:layout_width="317dp"
        android:layout_height="63dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:text="Numbers quiz"
        android:visibility="gone"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Animalsquiz" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/styletext"
        android:text="Let's do quiz"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="200dp"
        android:layout_height="214dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="428dp"
        android:src="@drawable/thingkinggirl"
        app:layout_constraintCircleRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </pl.droidsonroids.gif.GifImageView>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="216dp"
        android:layout_height="192dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numbersquiz"
        app:srcCompat="@drawable/soroq" />

</androidx.constraintlayout.widget.ConstraintLayout>