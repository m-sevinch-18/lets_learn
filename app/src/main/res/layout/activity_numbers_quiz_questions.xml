<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumbersQuizQuestionsActivity"
    android:background="@drawable/background">


    <EditText
        android:id="@+id/num_ans4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="86dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/imageView21"
        app:layout_constraintTop_toBottomOf="@+id/num_ans3" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="448dp"
        app:layout_constraintStart_toEndOf="@+id/num_v1"
        app:layout_constraintTop_toBottomOf="@+id/ques"
        app:srcCompat="@drawable/refernumber" />

    <TextView
        android:id="@+id/ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Write the numbers"
        android:textAlignment="center"
        android:textColor="#161E4A"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/num_v1"
        android:tag="0"
        android:layout_width="109dp"
        android:layout_height="119dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ques"
        app:shapeAppearanceOverlay="@style/roundingImage"
        app:srcCompat="@drawable/nine"
        app:strokeColor="#FFEB3B"
        app:strokeWidth="3dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/num_v2"
        android:tag="1"
        android:layout_width="109dp"
        android:layout_height="119dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="9dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_v1"
        app:shapeAppearanceOverlay="@style/roundingImage"
        app:srcCompat="@drawable/two" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/num_v3"
        android:tag="2"
        android:layout_width="109dp"
        android:layout_height="119dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_v2"
        app:shapeAppearanceOverlay="@style/roundingImage"
        app:srcCompat="@drawable/seven" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/num_v4"
        android:tag="3"
        android:layout_width="109dp"
        android:layout_height="119dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="11dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_v3"
        app:shapeAppearanceOverlay="@style/roundingImage"
        app:srcCompat="@drawable/four" />

    <EditText
        android:id="@+id/num_ans1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/imageView18"
        app:layout_constraintTop_toBottomOf="@+id/ques" />

    <EditText
        android:id="@+id/num_ans2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/num_ans1" />

    <EditText
        android:id="@+id/num_ans3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="83dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/imageView20"
        app:layout_constraintTop_toBottomOf="@+id/num_ans2" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toEndOf="@+id/num_v1"
        app:layout_constraintTop_toBottomOf="@+id/ques"
        app:srcCompat="@drawable/refernumber" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="184dp"
        app:layout_constraintStart_toEndOf="@+id/num_v1"
        app:layout_constraintTop_toBottomOf="@+id/ques"
        app:srcCompat="@drawable/refernumber" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="316dp"
        app:layout_constraintStart_toEndOf="@+id/num_v1"
        app:layout_constraintTop_toBottomOf="@+id/ques"
        app:srcCompat="@drawable/refernumber" />

    <Button
        android:id="@+id/buttonsubmit"
        android:layout_width="124dp"
        android:layout_height="49dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="48dp"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_ans4" />

    <ImageView
        android:id="@+id/correctanswer"
        android:visibility="gone"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_marginStart="220dp"
        app:layout_constraintStart_toEndOf="@+id/num_v1"
        app:layout_constraintTop_toBottomOf="@+id/num_ans1"
        app:srcCompat="@drawable/correctanswer" />

    <ImageView
        android:id="@+id/wrongasnwer"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_marginStart="220dp"
        app:layout_constraintStart_toEndOf="@+id/num_v1"
        app:layout_constraintTop_toBottomOf="@+id/num_ans1"
        app:srcCompat="@drawable/wronganswer"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>